<% provide :page_title, t(".title") %>

<%= render "shared/error_messages", obj: @user %>

<h1><%= t ".content" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= render "form", url: user_path(@user), user: @user %>
    <hr>
    <div align="center">
      <%= link_to "https://gravatar.com/emails", target: "_blank" do %>
        <%= image_tag @user.gravatar_url,
          class: "img-responsive", alt: @user.name %>
        <%= @user.name %>
      <% end %>
    </div>
  </div>
</div>
