<% user ||= current_user %>

<div class="stats">
  <%= link_to following_user_path(user) do %>
    <strong id="following" class="stat">
      <%= user.following.count %>
      <%= t "following.follow" %>
    </strong>
  <% end %>

  <%= link_to followers_user_path(user) do %>
    <strong id="followers" class="stat">
      <%= user.followers.count %>
      <%= t "following.follower" %>
    </strong>
  <% end %>
</div>
