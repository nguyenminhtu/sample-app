<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to t("app.name"), root_path,
      id: "logo", class: "navbar-brand" %>
    <nav>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to t("languages.vi"), locale: "vi" %>
        </li>
        <li>
          <%= link_to t("languages.en"), locale: "en" %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to t(".user"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
              data: {toggle: "dropdown"} do %>
                <%= current_user.name %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
          <li><%= link_to t(".signup"), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
